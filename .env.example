# Server Configuration
PORT=3000
NODE_ENV=development

# Database Configuration
# PostgreSQL (Recommended for production - Vercel will auto-inject these)
# If POSTGRES_URL is set, PostgreSQL will be used. Otherwise, SQLite is used.
# POSTGRES_URL=
# POSTGRES_PRISMA_URL=
# POSTGRES_URL_NON_POOLING=

# SQLite (for local development)
# Path to SQLite database file (relative to project root)
DATABASE_PATH=./data/network.db

# API Configuration
# Base URL for API endpoints (used in frontend)
API_BASE_URL=http://localhost:3000/api

# Redis Configuration (Optional - for cluster mode and caching)
# Leave empty to run without Redis
# Example: redis://localhost:6379
REDIS_URL=
